<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/dash_bg"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/txtMenuNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Hai Nama!"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:transitionName="txtmenu_nama" />

            <TextView
                android:id="@+id/hinam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Apa kabar hari ini ?"
                android:fontFamily="@font/open_sans_regular"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:transitionName="txtmenu_nama" />

            <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:src="@drawable/logohmsi"
                android:id="@+id/Dash_Logo"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/Dash_Event"
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="180dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/il_event"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Event"
                    android:fontFamily="@font/open_sans_bold"
                    android:gravity="center"
                    android:textColor="@color/greeny"
                    android:textAppearance="?attr/textAppearanceHeadline6" />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/Dash_Galeri"
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="180dp"
            android:layout_marginRight="38dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/il_galeri"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Galeri"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/greeny"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceHeadline6" />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="225dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/Dash_Pengurus"
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="180dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/il_pengurus"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Pengurus"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/greeny"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceHeadline6" />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/Dash_Aspirasi"
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="180dp"
            android:layout_marginRight="38dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/il_aspirasi"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Aspirasi"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/greeny"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceHeadline6" />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>






</FrameLayout>